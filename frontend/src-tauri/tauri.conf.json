{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Whisper4Windows",
  "version": "0.1.0",
  "identifier": "com.whisper4windows.dev",
  "build": {
    "frontendDist": "../dist",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Whisper4Windows - Settings",
        "width": 550,
        "height": 700,
        "minWidth": 880,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "skipTaskbar": true,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": false,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/whisper-backend"
    ],
    "resources": [],
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "languages": ["English"],
        "displayLanguageSelector": false
      }
    }
  }
}